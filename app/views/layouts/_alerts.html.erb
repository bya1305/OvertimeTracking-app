<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], :image => :notice, :title => "Overtime Log Alert", :sticky => false) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], :image => :notice, :title => "Overtime Log Error", :sticky => false) %>
<% else %>
  <%= js add_gritter(flash[:notice], :image => :notice, :title => "Overtime Log Notification", :sticky => false) %>
<% end %>
